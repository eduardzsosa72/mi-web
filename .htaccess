# Habilitar rewrite engine
RewriteEngine On

# Prevenir listado de directorios
Options -Indexes

# Proteger archivos muy sensibles SOLO
<Files ~ "\.(env|log|sql|ini|config)$">
    Deny from all
</Files>

# IMPORTANTE: PERMITIR acceso a auth.php, admin.php y redeem.php
# NO bloquear estos archivos ya que el login los necesita

# Cacheo básico para mejor rendimiento
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Cabeceras de seguridad básicas
<IfModule mod_headers.c>
    Header set X-Content-Type-Options nosniff
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Prevenir acceso a .htaccess
<Files ".ht*">
    Deny from all
</Files>